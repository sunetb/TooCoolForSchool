<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
	android:background="#00000000"
    tools:context="com.example.cool.TekstFragment_frag">




<LinearLayout
android:orientation="horizontal"
android:layout_width="match_parent"
android:layout_height="0px"
android:layout_weight="1.7"
android:gravity="center"
android:id="@+id/lloverskrift">

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:text="Der er sket en fejl Og . . . her er en test-tekst for at se hvordan ombrydning opfører sig og hvor hmange liner der er plads til i overskriften"
    android:id="@+id/overskrift"
    android:textStyle="bold"
    android:textAllCaps="true"
    android:layout_gravity="center"
    android:gravity="center" />


</LinearLayout>

<View
android:layout_width="match_parent"
android:layout_height="1dp"
android:background="#ffffffff"
	android:id="@+id/adskiller"
	/>


<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
	android:layout_height="0dp"
	android:layout_weight="8"
	android:background="#00000000"
	android:layout_gravity="bottom"  
	android:id="@+id/tekstområde">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
		
        android:id="@+id/brodtekst" />

    <WebView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
        android:background="#00000000"
    android:id="@+id/brodtekstweb" />

   
    <ProgressBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/prog"
        android:layout_gravity="center"
        android:indeterminate="true"
        android:visibility="invisible"/>
  
</LinearLayout>

  

    </LinearLayout>
